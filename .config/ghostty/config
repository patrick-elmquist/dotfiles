# General 
copy-on-select = true
desktop-notifications = true
shell-integration = zsh

# Keybinds
keybind = cmd+shift+e=open_config
keybind = cmd+shift+r=reload_config
keybind = cmd+shift+n=new_split:auto
keybind = alt+i=goto_split:right
keybind = alt+m=goto_split:left
keybind = alt+tab=goto_split:next
keybind = ctrl+tab=goto_split:next

# MacOS
macos-titlebar-style = native
macos-titlebar-proxy-icon = hidden
macos-window-shadow = true

# Themes
theme = rose-pine
# theme = ChallengerDeep
# theme = Banana Blueberry
# theme = synthwave-everything

# Quick Terminal
keybind = global:cmd+escape=toggle_quick_terminal
keybind = global:cmd+shift+b=toggle_quick_terminal
quick-terminal-screen = macos-menu-bar
quick-terminal-position = top
quick-terminal-animation-duration = 0

# Window
background-blur-radius = 10
background-opacity = 0.95
minimum-contrast = 2
window-inherit-working-directory = false
window-padding-x = 12
window-padding-y = 6
window-save-state = always

# vim: set ft=config
